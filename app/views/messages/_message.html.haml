.contents-main-right__user
  .contents-main-right__user-name
    = message.user.name
  .contents-main-right__user-timestamp
    = message.created_at.strftime("%Y/%m/%d %H:%M")
.contents-main-right__message
  = message.content if message.content.present?
  = image_tag message.image.url if message.image.present?



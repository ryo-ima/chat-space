      = link_to group_messages_path(group) do
        .contents-main-left__group
          = group.name
        .contents-main-left__message
          メッセージはまだありません。
  .contents-main-right
    .contents-main-right__user
      .contents-main-right__user-name
        testuser
      .contents-main-right__user-timestamp
        testtimestamp
    .contents-main-right__message
      testmessage
      .fontawesome_file_field
        &#xf03e
  .contents-main-message-form
    .contents-main-message-form__message
      %input(placeholder="type a message" class="input-message" type="text" name="message")
      .contents-main-message-form__message-image
        %label(class="fontawesome_image")
          &#xf03e
          %input(type="file" class="fontawesome_file_field" label="aaa")
